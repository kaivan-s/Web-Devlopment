<% include partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align: center">Insert a new Camp here !!</h1>
        <div style="width: 30%; margin:40px auto">
            <form action="/campground" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter the name.." name="name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Image URL " name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter some description" name="description">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Enter Amount" name="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campground">Go back..</a>
        </div>

    </div>
</div>
<% include partials/footer %>