<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin:40px auto">
            <form action="/campground/<%= campground._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="cc[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="cc[price]" value="<%= campground.price %>" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campground.image %>" name="cc[image]">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= campground.description %>" name="cc[description]" >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campground">Go back..</a>
        </div>

    </div>
</div>
<% include partials/footer %>