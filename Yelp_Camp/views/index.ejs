<% include partials/header %>

<div class="container">
<header class="jumbotron" style="text-align: center">
    <div class="container">
        <h1>Welcome to YelpCamp !!</h1>
        <p>Your handpicked campgrounds all-over India</p>
        <p>
            <a href="/campground/new" class="btn btn-primary btn-large">Add a new campground</a>
        </p>
    </div>
</header>

    <div class="row" style="display: flex;flex-wrap: wrap;">
        <% camps.forEach(function (camp) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camp.image %>">
                <div class="caption" style="text-align: center">
                    <h4><%= camp.name %></h4>
                </div>
                <p>
                    <a href="/campground/<%=camp._id%>" class="btn btn-primary" style="margin-left:33%">More Info</a>
                </p>
            </div>
        </div>

        <% }); %>
    </div>
</div>
<% include partials/footer %>